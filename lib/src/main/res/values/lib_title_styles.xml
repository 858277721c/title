<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="lib_title_text_title_bar_base">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- 标题栏文字 -->
    <style name="lib_title_text_title_bar" parent="lib_title_text_title_bar_base">
        <item name="android:textColor">@color/lib_title_text_title_bar</item>
        <item name="android:textSize">@dimen/lib_title_text_title_bar</item>
    </style>

    <!-- 标题栏较小文字 -->
    <style name="lib_title_text_title_bar_sub" parent="lib_title_text_title_bar_base">
        <item name="android:textColor">@color/lib_title_text_title_bar_sub</item>
        <item name="android:textSize">@dimen/lib_title_text_title_bar_sub</item>
    </style>

</resources>